<h1 align="center">Give assignments to users</h1>

<%= form_for @assignment,url: new_project_assignment_path do |f| %>

<div class="form-group">
		<%= f.label :description %>
		<%= f.text_area :description, class: "form-control" %>
</div>
	
<div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :start_date %>
      
      <%= f.date_field :start_date, class: "form-control" %>
    </div>
    <div class="form-group col-md-6">
       <%= f.label :dead_line %>
      
      <%= f.date_field :dead_line, class: "form-control" %>
    </div>
  </div>

	

<% end %>