<h1 align="center">Give assignments to users</h1>

<%= form_for @a,url: project_assignment_path do |f| %>

<div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control",autofocus: true %>
</div>
  
<div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :start_date %>
      
      <%= f.date_field :start_date, class: "form-control" %>
    </div>
    <div class="form-group col-md-6">
       <%= f.label :dead_line %>
      
      <%= f.date_field :dead_line, class: "form-control" %>
    </div>
  </div>

    <div class="form-group">
       <%= f.label :user_id %>
      
      <%= f.select :user_id, @users.map {|c| [ c.email.to_s, c.id ] },{} ,{class: "form-control"} %>

    </div>

      <div class="form-group" hidden>
       <%= f.label :project_id %>
      
      <%= f.text_field :project_id, value: params[:project_id],readonly: true %>

    </div>
  </div>


  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <%= f.submit "Send assingment", class: "btn btn-primary"%>
    </div>
  </div>

<% end %>