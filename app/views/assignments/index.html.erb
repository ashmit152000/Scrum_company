<h1 align="center">All your assignments</h1>

<ul class="list-group">

<%= will_paginate @assignments, renderer: WillPaginate::ActionView::BootstrapLinkRenderer,class: "page-link" %>
<% @assignments.each do |a| %>

	<% if Time.now.strftime("%d/%m/%y") == a.dead_line.strftime("%d/%m/%y") %>
		<li class= "list-group-item list-group-item-danger assignment"><%= link_to "#{a.description}", project_assignment_path(@project.id,a.id) %> | Deadline: <%= a.dead_line.strftime('%dth %B %Y (%A)') %></li>
		<br/>	
	<% else %>
		<li class= "list-group-item list-group-item-primary assignment"><%= link_to "#{a.description}", project_assignment_path(@project.id,a.id) %> | Deadline: <%= a.dead_line.strftime('%dth %B %Y (%A)') %></li>
		<br/>	
	<% end %>
	
	

	
<% end %>
</ul>

<%= will_paginate @assignments, renderer: WillPaginate::ActionView::BootstrapLinkRenderer,class: "page-link" %>