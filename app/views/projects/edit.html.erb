<h2 align="center">Edit <%= @project.name %>'s information</h2>


<%= form_for @project,url: project_path  do |f| %>

<div class="form-group">
		<%= f.label :name %>
		<%= f.text_area :name, class: "form-control",autofocus: true %>
</div>

<div class="form-group">
		<%= f.label :description %>
		<%= f.text_area :description, class: "form-control" %>
</div>
	
<div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :start_date %>
      
      <%= f.date_field :start_date, class: "form-control" %>
    </div>
    <div class="form-group col-md-6">
       <%= f.label :dead_line %>
      
      <%= f.date_field :dead_line, class: "form-control" %>
    </div>
  </div>

<div class="form-group" hidden>
		<%= f.label :user_id %>
		<%= f.text_field :user_id, class: "form-control", readonly: true %>
</div>
    


  </div>
  <% if @project.user_id == current_user.id %>
	<div class="form-group row">
    <div class="col-sm-10">
      <%= f.submit "Edit Project", class: "btn btn-primary"%>
    </div>
  </div>
  <% else %>
  			<h6 align="center" class="alert alert-danger">Only admin can edit the project</h6>
  <% end %>

<% end %>