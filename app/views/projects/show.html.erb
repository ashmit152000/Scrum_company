<div class="jumbotron jumbotron-fluid color-blue">
  <div class="container">
    <h4 class="display-4" align="center"><strong>Project name</strong>: <%= @project.name %></h4>
    <p class="lead" align="center"><strong>Project description:</strong> <%= @project.description %></p>
  </div>
</div>

<% if @user_rank == "Project Manager" %>

<div class="search_area">
	<h3>Search Members</h3>
  <%= form_tag  search_members_path,remote: true,method: :get do %>

		<div class="form-group row">
			<div class="col-sm-10 no-right-padding">
				<%= text_field_tag :member, params[:member],placeholder: "Search Members",autofocus: true, class: "form-control form-control-lg" %>
			</div>




  				<%= text_field_tag :project, params[:project], value: params[:id],hidden: true %>






			<div class="col-sm-2 no-left-padding">
				<%= button_tag type: :submit, class: "btn btn-primary" do %>
						<%= fa_icon "search 2x" %>
				<% end %>
			</div>



		</div>

	<% end %>
</div>


<div id="results">

</div><br/>
<% else %>
	<h3>These are the works assigned to you</h3>
<% end %>





<%= render "projects/listing" %>
